# Navigate into the app module where the Gradle build is
cd app || {
  echo "âŒ Failed to enter app/ directory"
  exit 1
}

echo "ğŸ” Running ktlint..."
./gradlew ktlintCheck

if [ $? -ne 0 ]; then
  echo "âŒ ktlint failed. Please fix formatting before pushing."
  exit 1
fi

echo "ğŸ§ª Running unit tests..."
./gradlew testDebugUnitTest

if [ $? -ne 0 ]; then
  echo "âŒ Unit tests failed. Please fix them before pushing."
  exit 1
fi


#!/bin/bash
# Run ktlint format and check before every commit

# Format the code first
./gradlew ktlintFormat

# Then run lint check
./gradlew ktlintCheck

# If lint check fails, cancel commit
if [ $? -ne 0 ]; then
  echo ""
  echo "‚ùå ktlintCheck failed. Please fix lint errors before committing."
  exit 1
fi

